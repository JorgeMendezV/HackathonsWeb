<!DOCTYPE html>
<html>

<head>
    <title>View Hackathon</title>
    <%- include("partials/main") -%>
</head>

<body>
    <header>
        <%- include('partials/navigation') -%>
    </header>
    <main>
        <div id="hackathons-view-container">
            <div class="mainbox-view">
                <img src="<%=image.path%>" alt="" class="view-image">
                <div class="boxitem-view">
                    <div class="boxcontent-view">
                        <h2>
                            <%= image.title %>
                        </h2>
                        <p>
                            <%= image.description %>
                        </p>
                        <span class="boxdate-view">
                            <%= format( image.created_at ) %>
                        </span>
                        <div class="button-group"> <!-- Crea un contenedor para los botones -->
                            <a href="/image/<%= image._id %>/delete" class="boxcontent">
                                Delete Hackathon
                            </a>
                            <a href="/image/<%= image._id %>/update" class="boxcontent">
                                Update Hackathon
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
</body>

</html>