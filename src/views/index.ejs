<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Main page</title>
    <%- include("partials/main") -%>
</head>

<body>

    <%- include('partials/navigation') -%>
        <main>
            <div>
                <h1 id="" class="titleMain animated-text">Hack-ele</h1>
                <div class="text-container">
                    <p class="animated-text">
                        Explore an
                        infinite world of opportunities!</p>
                </div>
            </div>

            <div class="imageMain-container">
                <img id="imageMain" src="./assets/shared/Handcoding-bro.png" alt="">
            </div>

            <div class="busqueda">
                <input type="text" id="busqueda-titulo" placeholder="Buscar por tÃ­tulo...">
                <button id="buscar">Buscar</button>
                <button id="filtro-fecha">Filtrar por fecha</button>
            </div>

            <div class="hackathons-container">
                <div class="mainbox">
                    <% images.forEach(function(image){ %>
                        <div class="boxitem">
                            <img src="<%=image.path%>" alt="">
                            <div class="boxcontent">
                                <h2>
                                    <%= image.title %>
                                </h2>
                                <p>
                                    <%= image.description %>
                                </p>
                                <span class="boxdate">
                                    <%= format( image.created_at ) %>
                                </span>
                                <a href="/image/<%= image._id %>" class="boxcontent">
                                    View Hackathon
                                </a>
                            </div>
                        </div>
                        <%}) %>
                </div>
            </div>

        </main>
        <footer>
            <%- include('partials/footer') -%>
        </footer>
</body>

</html>