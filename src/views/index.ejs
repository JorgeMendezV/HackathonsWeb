<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Main page</title>
    <%- include("partials/main") -%>
</head>

<body>

    <%- include('partials/navigation') -%>

    <main>
        <div>
            <h1 style="font-size: 120px; text-align: center;">Hackaele</h1>
            <p style="text-transform: uppercase; font-size: 40px; text-align: center; margin-bottom: 200px;"> Explore an
                infinite world of opportunities!</p>
        </div>

        <div class="busqueda">
            <input type="text" id="busqueda-titulo" placeholder="Buscar por tÃ­tulo...">
            <button id="buscar">Buscar</button>
            <button id="filtro-fecha">Filtrar por fecha</button>
        </div>

        <div id="hackathons-container">
            <div class="mainbox">
                <% images.forEach(function(image){ %>
                    <div class="boxitem">
                        <img src="<%=image.path%>" alt="">
                        <div class="boxcontent">
                            <h2>
                                <%= image.title %>
                            </h2>
                            <p>
                                <%= image.description %>
                            </p>
                            <span class="boxdate">
                                <%= format( image.created_at ) %>
                            </span>
                            <a href="/image/<%= image._id %>" class="boxcontent">
                                View Hackathon
                            </a>
                        </div>
                    </div>
                    <%}) %>
            </div>
        </div>

    </main>
    <footer>
    </footer>
</body>

</html>